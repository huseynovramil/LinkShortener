@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer Localizer

@model LinkShortener.Areas.Dashboard.Models.RequestVM

@{
    ViewData["Title"] = Localizer["Withdraw"];
}
<h1>@Localizer["Withdraw"]</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Withdraw">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RecipientTypeID" class="control-label"></label>
                <select asp-for="RecipientTypeID" class="form-control" asp-items="ViewBag.RecipientTypeID"></select>
                <span asp-validation-for="RecipientTypeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Receiver" class="control-label"></label>
                <input asp-for="Receiver" class="form-control" />
                <span asp-validation-for="Receiver" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Money" class="control-label"></label>
                <input asp-for="Money" class="form-control" />
                <span asp-validation-for="Money" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Request"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>